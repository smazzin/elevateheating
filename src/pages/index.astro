<Layout metadata={metadata}>
  <ContactHero
    video={{ src: '~/assets/videos/vans.mp4' }}
    id="form"
    title="Beaverton & Hillsboro's Trusted Air Conditioning & Heating Company"
    subtitle="Any HVAC issues that may arise with your home can be resolved by us."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
      rows: 1,
    }}
    button="Submit"
  />
