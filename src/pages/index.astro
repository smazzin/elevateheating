---
import Layout from '~/layouts/PageLayout.astro';

// import BigHero from '~/components/widgets/BigHero.astro';
import ContactHero from '~/components/widgets/ContactHero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Brands from '~/components/widgets/Brands.astro';
import Services from '~/components/widgets/Services.astro';
import HeroMiddle from '~/components/widgets/HeroMiddle.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Top Rated Beaverton/Hillsboro HVAC Service',
  ignoreTitleTemplate: true,
