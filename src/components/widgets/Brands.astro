---
import { Icon } from 'astro-icon/components';
import type { Brands as Props } from '~/types';

import Image from '~/components/common/Image.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

import person1 from "~/assets/images/ac-repair-hero.jpg";
import person2 from "~/assets/images/ac-repair-hero.jpg";
import person3 from "~/assets/images/ac-repair-hero.jpg";

const {
  title = '',
  subtitle = '',
  tagline = '',
  icons = [],
  images = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="container grid grid-cols-1 items-start justify-center gap-x-12 gap-y-8 md:grid-cols-[max-content_1fr] md:items-center md:justify-between md:gap-y-4 lg:gap-x-16">

    <Headline title={title} subtitle={subtitle} tagline={tagline} />
    
    <div class="grid grid-cols-2 items-center justify-end gap-x-4 gap-y-4 pt-4 sm:grid-cols-3 md:gap-x-8 md:pt-0 lg:grid-cols-5">
      {icons && icons.map((icon) => <Icon name={icon} class="py-3 lg:py-5 w-12 h-auto mx-auto sm:mx-0 text-gray-500" />)}
      {
        images &&
        images.map(
          (image) =>
          image.src && (
            <div class="flex items-start justify-center justify-self-center px-4 py-3 md:p-0">
                <Image src={image.src} alt={image.alt || ''} class="max-h-12" layout="responsive" />
              </div>
            )
          )
        }
  </div>
          <!-- social proof -->
      <div
        class="-mt-2 flex max-w-md"
        data-aos="fade-right"
        data-aos-delay=".3"
        data-aos-trigger="#hero-side"
      >
        <div class="-m-1.5 flex flex-wrap items-center">
          <div class="w-auto p-1.5">
            <div class="flex flex-wrap">
              <div
                class="aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
              >
                <Image
                  src={person1}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
              <div
                class="-ml-5 aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
              >
                <Image
                  src={person2}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
              <div
                class="-ml-5 aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
              >
                <Image
                  src={person3}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
            </div>
          </div>
          <div class="flex-1 p-1.5 text-left">
            <p
              class="description max-w-[14rem] text-sm leading-tight tracking-tight"
            >
              5.0 Rating from 200+ reviews
            </p>
          </div>
        </div>
      </div>
</div>
</WidgetWrapper>
